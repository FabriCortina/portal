generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Collaborator {
  id            String    @id @default(uuid())
  tenantId      String
  clientId      String?
  name          String
  role          String
  dni           String
  cuit          String
  sooftEmail    String?
  personalEmail String?
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model SheetConfig {
  id              String    @id @default(uuid())
  tenantId        String
  spreadsheetId   String
  sheetName       String
  range           String
  updateFrequency String
  lastSyncDate    DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model Metric {
  id            String    @id @default(uuid())
  tenantId      String
  clientId      String
  marketMetrics Json
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}
